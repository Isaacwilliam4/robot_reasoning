<?xml version="1.0" ?>
<sdf version="1.8">
    <world name="world_demo">
        <physics name="1ms" type="ignored">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1.0</real_time_factor>
        </physics>
        <plugin
            filename="libignition-gazebo-physics-system.so"
            name="ignition::gazebo::systems::Physics">
        </plugin>
        <plugin
            filename="libignition-gazebo-user-commands-system.so"
            name="ignition::gazebo::systems::UserCommands">
        </plugin>
        <plugin
            filename="libignition-gazebo-scene-broadcaster-system.so"
            name="ignition::gazebo::systems::SceneBroadcaster">
        </plugin>
        <plugin 
            filename="libignition-gazebo-sensors-system.so" 
            name="ignition::gazebo::systems::Sensors">
        </plugin>

        <!-- This section defines the GUI elements for the simulation environment -->
        <gui fullscreen="0">
            <!-- 3D scene -->
            <plugin filename="GzScene3D" name="3D View">
                <ignition-gui>
                    <title>3D View</title>
                    <property type="bool" key="showTitleBar">
                        false
                    </property>
                    <property type="string" key="state">docked</property>
                </ignition-gui>

                <engine>ogre2</engine>
                <scene>scene</scene>
                <ambient_light>0.4 0.4 0.4</ambient_light>
                <background_color>0.8 0.8 0.8</background_color>
            </plugin>

            <!-- World control -->
            <plugin filename="WorldControl" name="World control">
                <ignition-gui>
                    <title>World control</title>
                    <property type="bool" key="showTitleBar">false</property>
                    <property type="bool" key="resizable">false</property>
                    <property type="double" key="height">72</property>
                    <property type="double" key="width">121</property>
                    <property type="double" key="z">1</property>

                    <property type="string" key="state">floating</property>
                    <anchors target="3D View">
                        <line own="left" target="left"/>
                        <line own="bottom" target="bottom"/>
                    </anchors>
                </ignition-gui>

                <play_pause>true</play_pause>
                <step>true</step>
                <start_paused>true</start_paused>
                <service>/world/world_demo/control</service>
                <stats_topic>/world/world_demo/stats</stats_topic>
            </plugin>

            <!-- World statistics -->
            <plugin filename="WorldStats" name="World stats">
                <ignition-gui>
                    <title>World stats</title>
                    <property type="bool" key="showTitleBar">false</property>
                    <property type="bool" key="resizable">false</property>
                    <property type="double" key="height">110</property>
                    <property type="double" key="width">290</property>
                    <property type="double" key="z">1</property>

                    <property type="string" key="state">floating</property>
                    <anchors target="3D View">
                        <line own="right" target="right"/>
                        <line own="bottom" target="bottom"/>
                    </anchors>
                </ignition-gui>

                <sim_time>true</sim_time>
                <real_time>true</real_time>
                <real_time_factor>true</real_time_factor>
                <iterations>true</iterations>
                <topic>/world/world_demo/stats</topic>
            </plugin>
            <!-- Entity Tree -->
            <plugin filename="EntityTree" name="Entity tree">
            </plugin>
        </gui>

        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <attenuation>
                <range>1000</range>
                <constant>0.9</constant>
                <linear>0.01</linear>
                <quadratic>0.001</quadratic>
            </attenuation>
            <direction>-0.5 0.1 -0.9</direction>
        </light>

        <!-- This model is for the ground plane, so that the robots have a surface to interact with. -->
        <model name="ground_plane">
            <static>true</static>
            <link name="link">
                <collision name="collision">
                <geometry>
                    <plane>
                    <normal>0 0 1</normal>
                    </plane>
                </geometry>
                </collision>
                <visual name="visual">
                <geometry>
                    <plane>
                    <normal>0 0 1</normal>
                    <size>100 100</size>
                    </plane>
                </geometry>
                <material>
                    <ambient>0.8 0.8 0.8 1</ambient>
                    <diffuse>0.8 0.8 0.8 1</diffuse>
                    <specular>0.8 0.8 0.8 1</specular>
                </material>
                </visual>
            </link>
        </model>

        <!-- Moving Forward Left-->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">81</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: 1.5}, angular: {z: 0.10}
            </output>
        </plugin>
        <!-- Moving Forward -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">87</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: 1.5}, angular: {z: 0.0}
            </output>
        </plugin>
        <!-- Moving Right Forward -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">69</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: 1.5}, angular: {z: -0.25}
            </output>
        </plugin>
        <!-- Rotate Left -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">65</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: 1.0}, angular: {z: 0.5}
            </output>
        </plugin>
        <!-- Freeze -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">83</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: 0.0}, angular: {z: 0.0}
            </output>
        </plugin>
        <!-- Rotate Right -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">68</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: 1.0}, angular: {z: -0.5}
            </output>
        </plugin>
        <!-- Moving Left Backward -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">90</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: -1.5}, angular: {z: -0.25}
            </output>
        </plugin>
        <!-- Moving Backwards -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">88</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: -1.5}, angular: {z: 0.0}
            </output>
        </plugin>
        <!-- Moving Right Backwards -->
        <plugin filename="libignition-gazebo-triggered-publisher-system.so"
                name="ignition::gazebo::systems::TriggeredPublisher">
            <input type="ignition.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">67</match>
            </input>
            <output type="ignition.msgs.Twist" topic="/cmd_vel">
                linear: {x: -1.5}, angular: {z: 0.25}
            </output>
        </plugin>

        <!-- This is what defines the walls in the simulation -->
        <model name='first_wall'>
            <static>true</static>
            <pose>-15 3 0 0 0 0</pose>
            <link name='box'>
                <pose/>
                <visual name='visual'>
                    <geometry>
                        <box>
                            <size>1.0 4.0 5.0</size>
                        </box>
                    </geometry>
                    <!--let's add color to our link-->
                    <material>
                        <ambient>0.0 0.0 1.0 1</ambient>
                        <diffuse>0.0 0.0 1.0 1</diffuse>
                        <specular>0.0 0.0 1.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <box>
                            <size>1.0 4.0 5.0</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>
        <model name='second_wall'>
            <static>true</static>
            <pose>5 -22 2.5 0 0 2</pose>
            <link name='box'>
                <pose/>
                <visual name='visual'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                    <!--let's add color to our link-->
                    <material>
                        <ambient>0.0 0.0 1.0 1</ambient>
                        <diffuse>0.0 0.0 1.0 1</diffuse>
                        <specular>0.0 0.0 1.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>
        <model name='third_wall'>
            <static>true</static>
            <pose>22.5 15 2.5 0 0 0</pose>
            <link name='box'>
                <pose/>
                <visual name='visual'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                    <!--let's add color to our link-->
                    <material>
                        <ambient>0.0 0.0 1.0 1</ambient>
                        <diffuse>0.0 0.0 1.0 1</diffuse>
                        <specular>0.0 0.0 1.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>
        <model name='fourth_wall'>
            <static>true</static>
            <pose>-22.5 15 2.5 0 0 2.5</pose>
            <link name='box'>
                <pose/>
                <visual name='visual'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                    <!--let's add color to our link-->
                    <material>
                        <ambient>0.0 0.0 1.0 1</ambient>
                        <diffuse>0.0 0.0 1.0 1</diffuse>
                        <specular>0.0 0.0 1.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>
        <model name='fifth_wall'>
            <static>true</static>
            <pose>-22.5 -24 2.5 0 0 0</pose>
            <link name='box'>
                <pose/>
                <visual name='visual'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                    <!--let's add color to our link-->
                    <material>
                        <ambient>0.0 0.0 1.0 1</ambient>
                        <diffuse>0.0 0.0 1.0 1</diffuse>
                        <specular>0.0 0.0 1.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <box>
                            <size>1.0 8.0 5.0</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>

        <!-- This is what defines what the robot looks like and how it behaves
         in the simulation environment. -->
        <model name='ackermann_robot' canonical_link='chassis'>
            <pose relative_to='world'>-5 0 0 0 0 2.5</pose>
            <link name='chassis'>
                <pose relative_to='__model__'>0.5 0 0.4 0 0 0</pose>
                <inertial>
                    <mass>1.14395</mass>
                    <inertia>
                        <ixx>0.095329</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.381317</iyy>
                        <iyz>0</iyz>
                        <izz>0.476646</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <box>
                            <size>2.0 1.0 0.5</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>0.0 0.0 0.0 1</ambient>
                        <diffuse>0.0 0.0 0.0 1</diffuse>
                        <specular>0.0 0.0 0.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <box>
                            <size>2.0 1.0 0.5</size>
                        </box>
                    </geometry>
                </collision>
            </link>

            <!-- Depth Camera Description -->
            <link name="camera_link">
                <pose relative_to="chassis">0.75 0 0.3 0 0 0</pose>
                <visual name="visual">
                    <geometry>
                        <box>
                            <size>0.25 .75 0.1</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>0.3 0.3 0.3 1</ambient>
                        <diffuse>0.7 0.7 0.7 1</diffuse>
                        <specular>0.8 0.8 0.8 1</specular>
                    </material>
                </visual>
                <sensor name="depth_camera" type="depth">
                    <topic>depth_camera</topic> <update_rate>10</update_rate>
                    <camera>
                        <horizontal_fov>1.05</horizontal_fov>
                        <image>
                            <width>640</width>
                            <height>480</height>
                            <format>R8G8B8</format>
                        </image>
                        <clip>
                            <near>0.1</near>
                            <far>10.0</far>
                        </clip>
                    </camera>
                </sensor>
            </link>
            <joint name="camera_joint" type="fixed">
                <parent>chassis</parent>
                <child>camera_link</child>
            </joint>

            <link name='back_left_wheel'>
                <pose relative_to="chassis">-0.5 0.6 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.043333</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.043333</iyy>
                        <iyz>0</iyz>
                        <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1</ambient>
                        <diffuse>0.15 0.15 0.15 1</diffuse>
                        <specular>0.01 0.01 0.01 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                </collision>
            </link>
           <link name='front_left_wheel'>
                <pose relative_to="chassis">0.8 0.6 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>                    
                        <ixx>0.043333</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.043333</iyy>
                        <iyz>0</iyz>
                        <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1</ambient>
                        <diffuse>0.15 0.15 0.15 1</diffuse>
                        <specular>0.01 0.01 0.01 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                </collision>
            </link>
            <link name='front_right_wheel'>
                <pose relative_to="chassis">0.8 -0.6 0 -1.5707 0 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.043333</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.043333</iyy>
                        <iyz>0</iyz>
                        <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1</ambient>
                        <diffuse>0.15 0.15 0.15 1</diffuse>
                        <specular>0.01 0.01 0.01 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                </collision>
            </link>
            <link name='back_right_wheel'>
                <pose relative_to="chassis">-0.5 -0.6 0 -1.5707 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.043333</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.043333</iyy>
                        <iyz>0</iyz>
                        <izz>0.08</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1</ambient>
                        <diffuse>0.15 0.15 0.15 1</diffuse>
                        <specular>0.01 0.01 0.01 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.4</radius>
                            <length>0.2</length>
                        </cylinder>
                    </geometry>
                </collision>
            </link>
            
            <!-- This is where we define the steering mechanism for the front wheels -->
            <link name="front_left_steer">
                <pose relative_to="chassis">0.8 0.6 0 0 0 0</pose>
            </link>
            <link name="front_right_steer">
                <pose relative_to="chassis">0.8 -0.6 0 0 0 0</pose>
            </link>
            <joint name='front_left_steer_joint' type='revolute'>
                <parent>chassis</parent>
                <child>front_left_steer</child>
                <axis>
                    <xyz>0 0 1</xyz>
                    <limit>
                        <lower>-0.6</lower>    <!---45 degrees in radians-->
                        <upper>0.6</upper>     <!--45 degrees in radians-->
                        <effort>1000000</effort>
                    </limit>
                </axis>
            </joint>
            <joint name='front_right_steer_joint' type='revolute'>
                <parent>chassis</parent>
                <child>front_right_steer</child>
                <axis>
                    <xyz>0 0 1</xyz>
                    <limit>
                        <lower>-0.6</lower>    <!---45 degrees in radians-->
                        <upper>0.6</upper>     <!--45 degrees in radians-->
                        <effort>1000000</effort>
                    </limit>
                </axis>
            </joint>
            <joint name='front_left_wheel_joint' type='revolute'>
                <parent>front_left_steer</parent>
                <child>front_left_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                </axis>
            </joint>
            <joint name='front_right_wheel_joint' type='revolute'>
                <parent>front_right_steer</parent>
                <child>front_right_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                </axis>
            </joint>
            <joint name='back_left_wheel_joint' type='revolute'>
                <pose relative_to='back_left_wheel'/>
                <parent>chassis</parent>
                <child>back_left_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz> <!--can be defined as any frame or even arbitrary frames-->
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>
            <joint name='back_right_wheel_joint' type='revolute'>
                <pose relative_to='back_right_wheel'/>
                <parent>chassis</parent>
                <child>back_right_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>

            <!-- This plugin enables ackermann steering for the robot -->
            <plugin
                filename="libignition-gazebo-ackermann-steering-system.so"
                name="ignition::gazebo::systems::AckermannSteering">
                <left_steering_joint>front_left_steer_joint</left_steering_joint>
                <right_steering_joint>front_right_steer_joint</right_steering_joint>

                <left_joint>back_left_wheel_joint</left_joint>
                <right_joint>back_right_wheel_joint</right_joint>

                <wheel_separation>1.2</wheel_separation>
                <kingpin_width>1.2</kingpin_width>
                <wheel_base>1.3</wheel_base>
                <wheel_radius>0.4</wheel_radius>

                <topic>cmd_vel</topic>
                <odom_publish_frequency>30</odom_publish_frequency>
                <publish_odom_tf>true</publish_odom_tf>
            </plugin>
            <!-- This plugin broadcasts the position of all of the ackermann_robots links and joints -->
            <plugin
                filename="libignition-gazebo-pose-publisher-system.so"
                name="ignition::gazebo::systems::PosePublisher">
                <publish_link_pose>true</publish_link_pose>
                <publish_sensor_pose>true</publish_sensor_pose>
                <publish_collision_pose>false</publish_collision_pose>
                <publish_visual_pose>false</publish_visual_pose>
                <publish_nested_model_pose>true</publish_nested_model_pose>
                <use_pose_vector_msg>true</use_pose_vector_msg>
                <static_publisher>true</static_publisher>
                <static_update_frequency>1</static_update_frequency>
            </plugin>
        </model>
    </world>
</sdf>